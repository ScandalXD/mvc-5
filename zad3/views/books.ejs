<%- include('partials/navigation') %>
<h1>List of Books</h1>
<% if (books.length > 0) { %>
<ul>
  <% books.forEach(book => { %>
  <li>
    <%= book.title %> - <%= book.publishingYear %> by <%= book.authorId %>
    <form action="/book/delete/<%= book.id %>" method="POST">
      <button type="submit">Delete</button>
    </form>
  </li>
  <% }) %>
</ul>
<% } else { %>
<p>No books has been found.</p>
<% } %>
